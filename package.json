{
  "name": "diod",
  "version": "1.0.0-rc",
  "description": "A different inversion of control container for Typescript (suitable for Node.js or vanilla JS also).",
  "main": "index.js",
  "scripts": {
    "hook:commit-msg": "commitlint -e",
    "hook:pre-commit": "lint-staged",
    "lint": "eslint .",
